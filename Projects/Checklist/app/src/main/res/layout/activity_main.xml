<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.svensapps.checklist.MainActivity"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:id="@+id/meditateCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <CheckBox

            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="onCheckboxClicked"
            android:text="Meditated for 30 Minutes"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lovingKindnessCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meditateCheck">

        <CheckBox
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="onCheckboxClicked"
            android:text="Watched video on loving kindness"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meditateCheck" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lovingKindnessMeditationCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lovingKindnessCheck">

        <CheckBox
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="onCheckboxClicked"
            android:text="Practiced loving kindness meditation"
android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"

            />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/vipassanaVideoCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lovingKindnessMeditationCheck">

        <CheckBox
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="onCheckboxClicked"
            android:text="Watched video on vipassana meditation"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"

            />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/vipassannaPracticeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vipassanaVideoCheck">

        <CheckBox
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="onCheckboxClicked"
            android:text="Practiced vipassana meditation"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"

            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/shamathaVideoCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vipassannaPracticeCheck">

        <CheckBox
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="onCheckboxClicked"
            android:text="Watched video on shamatha meditation"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"

            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/shamathaPracticeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shamathaVideoCheck">

        <CheckBox
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="onCheckboxClicked"
            android:text="Practiced shamatha meditation"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"

            />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
